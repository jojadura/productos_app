<div class="container">
	<div class="row">
		<div class="col-sm-6">
			<h1>Products</h1>
			<table class="table table-hover flights">
			  <thead>
			    <tr>
			      <th>Nombre</th>
			      <th>Precio</th>
			      <th>Categorias</th>
			    </tr>
			  </thead>
			  <tbody>
			    <% @products.each do |product| %>
			    <tr>
			      <td><%= product.name %></td>
			      <td><%= product.price %></td>
			      <td class="text-center"><%= product.category_ids  %></td>
			    </tr>
			    <% end %>
			  </tbody>
			</table>
		</div>
	</div>
</div>