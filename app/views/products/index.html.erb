<div class="container">
	<div class="row">
		<div class="col-sm-7">
			<h1>Products</h1>
			<div class="text-right">
				<%= link_to "Nuevo Producto", new_product_path, class: "btn btn-primary" %>
			</div>	

			<table class="table table-hover flights">
			  <thead>
			    <tr>
			      <th>Nombre</th>
			      <th>Precio</th>
			      <th>Categorias</th>
			    </tr>
			  </thead>
			  <tbody>
			    <% @products.each do |product| %>
			    <tr>
			      <td><%= product.name %></td>
			      <td><%= product.price %></td>

			      <td>
                     <% product.categories.each do |category| %>                         
                         <%= category.name %>                         
                     <% end %>
                 </td>			      
                  <td><%= link_to "Editar", edit_product_path(product) %></td>
                  <td><%= link_to "Eliminar", product, method: :delete, data: { confirm: "¿Estás seguro de eliminar este producto?" } %></td>
			    </tr>
			    <% end %>
			  </tbody>
			</table>
		</div>
	</div>
</div>